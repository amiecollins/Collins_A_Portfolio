<div class="light-box hidden"><img src="{{ icons.3.svgURL }}" alt="{{ icons.3.alt }}" class="exit-button"></div>

<div class="main-wrapper">
    {{!-- Home --}}
    <section class="home">
        <h2 class="hidden">Home</h2>
        <div class="main-hero saturate">
            <div class="welcome-title-bg light-bg">
                {{ section.0.title }}
                {{ section.0.content }}
            </div>
        </div>

        <section class="qualities">
            <h3 class="qualities-title">Qualities I aspire for in all my work:</h2>
            <div class="photo-trio">
                {{#each qualities}}
                <div class="photo-container">
                    <div class="quality-photo"><img src="{{ this.imgURL }}" alt="{{ this.alt }}" class="saturate"></div>
                    <div class="photo-title light-bg">{{ this.title }}</div>
                </div>
                {{/each}}
            </div>
        </section>

        <section class="intro">
            <h3 class="hidden">Introduction to Me</h2>
            <div class="intro-hero saturate">
                <img class="me-photo saturate" src="{{ photos.0.imgURL }}" alt="{{ photos.0.alt }}">
                <div class="intro-bg light-bg">
                    <div class="intro-title">{{ section.1.title }}</div>
                    <div class="intro-text">{{ section.1.content }}</div>
                </div>
            </div>
        </section>

        <section class="quotes">
            <h3 class="hidden">inspirational quote for you</h3>
            <div class="quote"></div>
        </section>

    </section>

{{!-- Projects --}}
    <section class="projects">
        <h2 class="hidden">Projects I've worked on</h2>
        <div class="projects-hero saturate">
            <div class="projects-title-bg light-bg">Projects</div>
            <div class="projects-container">
                {{#each projects}}
                    <div class="project-icon" data-projectid="{{ this.id }}">{{ this.title }}</div>
                {{/each}}
            </div>
        </div>
        <div class="projects-display">
            {{!-- generate with js --}}
        </div>
    </section>
{{!-- About Me --}}
    <section class="about">
        <h2 class="hidden">More About Me</h2>
        <div class="about-hero saturate">
            <div class="about-text-bg light-bg">
                {{ section.2.title }}
                {{ section.2.content }}

                <div class="document-links">
                    <nav class="documents">
                        <h2 class="hidden">Links to Important Documents</h2>
                        <ul>
                            {{#each documents}}
                            <li><a href="{{ this.link }}"><img src="{{ this.svgURL }}" alt="{{ this.alt }}"></a></li>
                            {{/each}}
                        </ul>
                     </nav>
                </div>

                 <div class="social-media-links">
                    <nav class="social-media">
                        <h2 class="hidden">Social Media Links</h2>
                        <ul>
                            {{#each social_media}}
                            <li><a href="{{ this.link }}"><img src="{{ this.svgURL }}" alt="{{ this.alt }}"></a></li>
                            {{/each}}
                        </ul>
                     </nav>
                </div>
            </div>
        </div>

        <div class="social-feeds">
            <div class="facebook-feed">

            </div>
            <div class="twitter-spotify">
                <div class="twitter-feed">

                </div>
                <div class="spotify-playlist">

                </div>
            </div>
        </div>
    </section>
{{!-- Contact --}}
    <section class="contact">
        <h2 class="hidden">Contact Form</h2>
        <div class="contact-hero saturate">
            <form action="includes/form.php">
                <div class="contact-title">
                    {{ section.3.title }}
                </div>
                <div class="name">
                    <label class="contact-lbl" for="name">Name:</label> <input class="contact-input light-bg" type="text" name="name"> 
                </div>
                <div class="email">
                    <label class="contact-lbl" for="email">Email:</label> <input class="contact-input light-bg" type="email" name="email"> 
                </div>
                <div class="email-title">
                    <label class="contact-lbl" for="title">Title:</label> <input class="contact-input light-bg" type="text" name="title"> 
                </div>
                <div class="email-content">
                    <textarea class="contact-input light-bg" name="title"></textarea>
                </div>
                <div class="contact-buttons">
                    <input type="submit" class="contact-button clear-button" value="Clear"><input type="submit" class="contact-button send-button" value="Send">
                </div>
            </form>
            <div class="thank-you-message hidden">
                {{ section.3.content }}
            </div>
        </div>
    </section>

    {{!-- Call-to-Action --}}
    <section class="call">
        <h2 class="hidden">Thank You</h2>
        {{!-- generate with js --}}
    </section>

    {{!-- Footer --}}
    <footer class="main-footer">
        <h2 class="hidden">Footer Navigation and Social Media Links</h2>
        <div class="footer-nav light-bg">
            <nav class="footer-nav">
                <h3 class="hidden">Footer Page Navigation</h3>
                <ul>
                    <li><span data-link="home" class="link">Home</span></li>
                    <li><span data-link="projects" class="link">Projects</span></li>
                    <li><span data-link="about" class="link">About Me</span></li>
                    <li><span data-link="contact" class="link">Contact</span></li>
            </ul>
            </nav>
        </div>

        <div class="social-media-links">
            <nav class="social-media">
                <h2 class="hidden">Social Media Links</h2>
                <ul>
                    {{#each social_media}}
                    <li><a href="{{ this.link }}"><img src="{{ this.svgURL }}" alt="{{ this.alt }}"></a></li>
                    {{/each}}
                </ul>
            </nav>
        </div>
    </footer>
</div>